<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TeamDeskActivity"
    android:orientation="vertical">
    <include layout="@layout/custom_toolbar"
        android:id="@+id/toolbar_desk"/>
    <TextView
        android:id="@+id/teamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="TEAM NAME"
        android:textSize="30dp"
        android:fontFamily="@font/alegreya_sans_sc_medium"
        android:textColor="@color/darkBlue"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/meetingLink"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-18dp"
            android:src="@drawable/logo_meet"
            android:text="NO FOUND"
            android:textColor="@color/darkBlue"
            app:layout_constraintBottom_toBottomOf="@+id/meet"
            app:layout_constraintStart_toEndOf="@id/meet"
            app:layout_constraintTop_toTopOf="@+id/meet" />

        <TextView
            android:id="@+id/leaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:text="NO FOUND"
            android:textColor="@color/darkBlue"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/leader"
            app:layout_constraintStart_toEndOf="@+id/leader"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Meeting Link :"
            android:textColor="@color/darkBlue"
            android:textSize="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leader" />

        <TextView
            android:id="@+id/leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Leader :"
            android:textColor="@color/darkBlue"
            android:textSize="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/meet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Meeting Time :"
            android:textColor="@color/darkBlue"
            android:textSize="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meet" />

        <TextView
            android:id="@+id/meetingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO TIME"
            android:textColor="@color/darkBlue"
            android:textSize="20dp"
            android:paddingStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/meet1"
            app:layout_constraintLeft_toRightOf="@id/meet1"
            app:layout_constraintTop_toTopOf="@+id/meet1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members :"
        android:textColor="@color/darkBlue"
        android:textSize="27dp"
        android:layout_marginStart="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teamDeskRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/leave_background"
        android:padding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/employee_list"/>

</LinearLayout>